<div class="bg-primary banner d-flex justify-content-center align-items-center">
  <h1 class="text-white"><i class="fas fa-sign"></i> Modificar Agentes</h1>
</div>
<div class="container mt-5">
  <div class="card p-4">
    <form action="/admin/agentes/modificar" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="id_agente" value="{{agente.id_agente}}" />
      <input type="hidden" name="id" value="{{agente.id}}" />
      <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input
          type="text"
          class="form-control"
          id="nombre"
          name="nombre"
          placeholder="Nombre:"
          value="{{agente.nombre}}"
        />
      </div>
      <div class="mb-3">
        <label for="apellido" class="form-label">Apellido</label>
        <input
          type="text"
          class="form-control"
          id="apellido"
          name="apellido"
          placeholder="Apellido:"
          value="{{agente.apellido}}"
        />
      </div>
      <div class="mb-3 row">
        <label for="img" class="form-label">Foto de perfil</label>
        <input class="form-control mb-3" type="file" id="imagen" name="imagen" />
        {{#if agente.img_perfil}}
        <p>
            <input
            class="form-check-input"
            type="checkbox"
            id="img_delete"
            name="img_delete"
            value="1"
          />
          <label class="form-check-label" for="flexCheckChecked">
            ¿Eliminar imágen actual?
          </label>
      
            {{/if}}
          <input type="hidden" name="img_original" value="{{agente.img_perfil}}">
        </p>
      </div>
      <div class="text-end">
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </form>
    {{#if error}}
      <div class="alert alert-danger" role="alert">
        {{message}}
      </div>
    {{/if}}
  </div>
</div>